@model List<HomeModels>
@{
    ViewData["Title"] = "Index";
}

<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">

        @await Component.InvokeAsync("FrontTopPost");

        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2 style="border-bottom:1px solid #ccc;">Son Eklenenler</h2>
                </div>
            </div>

            @foreach (var item in Model)
            {
                <!-- post -->
                <div class="col-md-4">
                    <div class="post">
                        <a class="post-img" asp-controller="Post" asp-action="Details" asp-route-id="@item.Post.Id" ><img src="./img/@item.Post.Image" alt=""></a>
                        <div class="post-body">
                            <div class="post-meta">
                                <a asp-controller="Post" asp-action="Details" asp-route-id="@item.Post.Id" class="post-category cat-@item.Category.Id">@item.Category.Name</a>
                                <a class="post-category cat-4">@item.Post.Like</a>
                                <a class="post-category cat-4">@item.Post.DisLike</a>
                                <span class="post-date">@item.Post.Date</span>
                            </div>
                            <h3 class="post-title"><a asp-controller="Post" asp-action="Details" asp-route-id="@item.Post.Id">@item.Post.Name</a></h3>
                        </div>
                    </div>
                </div>
                <!-- /post -->
            }

            <div class="clearfix visible-md visible-lg"></div>
        </div>
        <!-- /row -->

        <!-- row -->
        <div class="row">
            <div class="col-md-8">
                @await Component.InvokeAsync("AllMixedPost");
            </div>

            <div class="col-md-4">
                @await Component.InvokeAsync("MostReadPost");

                @await Component.InvokeAsync("FeaturedPost");
            </div>
        </div>
        <!-- /row -->

    </div>
    <!-- /container -->
</div>
<!-- /section -->
