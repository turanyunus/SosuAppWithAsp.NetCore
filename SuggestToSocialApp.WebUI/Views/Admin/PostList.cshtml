@model PostListModel
@{
    ViewData["Title"] = "PostList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Post Listesi</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Resim</th>
                    <th>İsim</th>
                    <th>Açıklama</th>
                    <th>Yazar</th>
                    <th>Tarih</th>
                    <th>Begeni</th>
                    <th>Begenmeyen</th>
                    <th>Onay Durumu</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="postsTbody">
                @foreach (var item in Model.Post)
                {
                <tr>
                    <th>@item.Id</th>
                    <th> <img src="~/img/@item.Image" width="50" height="50" /> </th>
                    <th>@item.Name</th>
                    <th>@item.Description.Substring(0, 15)...</th>
                    <th>@item.Author</th>
                    <th>@item.Date.ToShortDateString()</th>
                    <th>@item.Like</th>
                    <th>@item.DisLike</th>

                    <th>
                        @if (@item.IsApproved)
                        {
                            <a class="fa fa-check"></a>
                        }
                        else
                        {
                            <a class="fa fa-times"></a>
                        }

                    </th>
                    
                    <th>
                        <button class="btn btn-primary btn-sm">Düzenle</button>
                        <button class="btn btn-danger btn-sm">Sil</button>
                    </th>
                </tr>
                }
            </tbody>
        </table>
        <div class="card-footer">
            <a class="btn btn-primary" asp-controller="Admin" asp-action="AddPost" >Post Ekle</a>
        </div>
    </div>
</div>