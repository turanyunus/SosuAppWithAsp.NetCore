@model LoginModel
@{
    ViewData["Title"] = "Login";
}


<section id="content" style="margin-top:20px">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="padding25">
                    <h4>Giriş Yapınız</h4>
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <input asp-for="Email" class="form-control input-lg" placeholder="Email">
                        </div>

                        <div class="form-group col-xs-12">
                            <input asp-for="Password" class="form-control input-lg" placeholder="Password">
                        </div>
                        <div class="form-group col-xs-12 text-left">
                            <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-send fa-fw"></i> Giriş Yapınız</button>
                        </div>
                    </div>
                </form>

            </div>

            <div class="col-md-4">

                <div class="padding25">
                    <h4>Sitemize <b>Hoşgeldiniz</b></h4>
                </div>
                <p>Eğer hala kayıtlı değil iseniz. Kayıt olmak için aşagıdaki butona tıklayabilirsiniz</p>
                <a class="btn btn-primary btn-lg" asp-controller="Account" asp-action="Register"><i class="fa fa-send fa-fw"></i> Kayıt Olunuz</a>
            </div>

        </div>

    </div>



</section>

