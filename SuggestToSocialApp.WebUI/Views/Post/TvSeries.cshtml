@model List<PostCategoriesModel>
@{
    ViewData["Title"] = "TvSeries";
}


<!-- row -->
<div class="row" style="margin-top:30px;">
    @foreach (var item in Model)
    {
        <!-- post -->
        <div class="col-md-4">
            <div class="post">
                <a class="post-img" asp-controller="Post" asp-action="Details" asp-route-id="@item.PostCategories.Id"><img src="~/img/@item.PostCategories.Image" alt=""></a>
                <div class="post-body">
                    <div class="post-meta">
                        <a asp-controller="Post" asp-action="Details" asp-route-id="@item.PostCategories.Id" class="post-category cat-@item.Category.Id">@item.Category.Name</a>
                        <a class="post-category cat-4">@item.PostCategories.Like</a>
                        <a class="post-category cat-4">@item.PostCategories.DisLike</a>
                        <span class="post-date">@item.PostCategories.Date</span>
                    </div>
                    <h3 class="post-title"><a asp-controller="Post" asp-action="Details" asp-route-id="@item.PostCategories.Id">@item.PostCategories.Name</a></h3>
                </div>
            </div>
        </div>
        <!-- /post -->
    }

    <div class="clearfix visible-md visible-lg"></div>
</div>
<!-- /row -->
